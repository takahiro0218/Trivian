<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <h3 class="mb-3">【投稿する】</h3>
      <%= render "layouts/errors", model: @post %>
      <%= form_with model: @post do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <div class="form-group">
          <label for="inputImage">
            <div class="heading p-1 2">画像を選択</div>
          </label>
          <%= f.file_field :post_image, accept: "image/*", class: "form-control-file post_image" %>
        </div>
        <div class="form-group mt-4">
          <label for="inputText">
            <div class="heading p-1 2">文章を入力</div>
          </label>
          <%= f.text_field :text, class: "form-control text" %>
        </div>
        <div class="form-group heading col-2 mt-4">
          <%= f.label :category_id, "ジャンル" %>
        </div>
          <p><%= f.collection_select :category_id, @category, :id, :name, include_blank: "--選択してください--" %></p>
        <div class="form-group mt-4 text-center">
          <%= f.submit "投稿する", class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


