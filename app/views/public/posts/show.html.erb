<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <%= render "layouts/errors", model: @post_comment %>
      <%= render "post", post: @post %>
      <div class="border my-3"></div>
      <h4>【コメント】</h4>
      <div id="post_comments_form">
        <%= render 'public/post_comments/form', post: @post, post_comment: @post_comment %>
      </div>
      <div id="post_comments_post_comments">
        <%= render "public/post_comments/post_comments", post_comments: @post_comments %>
      </div>
      <div class="d-flex justify-content-center mt-3 custom-pagination">
        <div id="paginate">
          <%= paginate @post_comments %>
        </div>
      </div>
    </div>
  </div>
</div>
