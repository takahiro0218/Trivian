<% if users.exists? %>
  <% users.each do |user| %>
    <table class="table table-borderless">
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_user_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(user.id) do %>
            <% if user.profile.present? %>
              <%= user.profile %>
            <% else %>
              <p>プロフィールはまだありません。</p>
            <% end %>
          <% end %>
        </td>
      </tr>
    </table>
    <div class="border my-3"></div>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>